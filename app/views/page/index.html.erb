<section id="top">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-11 col-md-1 add-button">
        <%= link_to "+", new_so_path, class: "btn btn-primary add-button", id: "new-so-btn" %>
      </div>
      <div class="title col-md-offset-4 col-md-4 text-center">
        <h2>Select the OS</h2>
      </div>
    </div>

    <div class="col-centered">
      <div class="selectable" id="so-selectable">
        <% unless @sos.nil? %>
            <% @sos.each do |so| %>
                <div class="col-md-3 col-md-offset-1 clickable text-center <%= "so_id_#{so.id}" %>" id="<%= so.id %>">
                  <div class="panel panel-primary">
                    <div class="panel-heading">
                      <h3 class="panel-title so-name"><%= so.name %></h3>
                    </div>
                    <div class="panel-body">
                      <%= image_tag so.img_url.to_s, class: "img-responsive center-block" %>
                    </div>
                  </div>
                </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section id="app">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-11 col-md-1 add-button">
        <button class="btn btn-primary add-button" id="new-app-btn">+</button>
      </div>
      <div class="title col-md-offset-4 col-md-5 text-center">
        <h2>Select the App</h2>
      </div>
    </div>
    <div class="col-centered selectable" id="app-selectable">
    </div>
  </div>
</section>

<section class="success" id="shortcut">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-11 col-md-1 add-button">
        <button class="btn btn-primary add-button" id="new-shortcut-btn">+</button>
      </div>
      <div class="title col-md-offset-4 col-md-5 text-center">
        <h2>Shortcuts</h2>
      </div>
    </div>
    <div class="row">
      <div id="shortcut-selectable"/>
    </div>

    <div class="col-centered" id="shortcut-selectable">
    </div>
  </div>
</section>
